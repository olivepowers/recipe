{
  "name": "recipe-box",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npx prisma generate",
    "start": "next start",
    "lint": "next lint",
    "db:up": "docker run -d -e POSTGRES_DB=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_USER=postgres -p '6500:5432' postgres",
    "generate": "npx prisma generate",
    "migrate": "npx prisma migrate dev",
    "seed": "npx prisma migrate reset",
    "studio": "npx prisma studio",
    "tree": "git ls-tree -r --name-only HEAD | tree --fromfile | pbcopy"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.0.2",
    "@next-auth/prisma-adapter": "^0.4.4-canary.81",
    "@prisma/client": "^5.3.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-menubar": "^1.0.3",
    "@radix-ui/react-navigation-menu": "^1.1.3",
    "@radix-ui/themes": "^1.1.2",
    "@types/node": "20.6.0",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.15",
    "eslint": "8.49.0",
    "eslint-config-next": "13.4.19",
    "lucide-react": "^0.277.0",
    "next": "13.4.19",
    "next-auth": "^4.23.1",
    "openai": "^4.12.1",
    "postcss": "8.4.29",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "devDependencies": {
    "prisma": "^5.3.1"
  }
}
