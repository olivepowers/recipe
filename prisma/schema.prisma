model List {
  id          Int          @id @default(autoincrement())
  name        String
  author      User?        @relation(fields: [authorId], references: [id])
  authorId    Int?
  listRecipes ListRecipe[]
}

model Recipe {
  id          Int          @id @default(autoincrement())
  title       String
  picture     String?
  link        String?
  ingredients String[]     @default([])
  steps       String[]     @default([])
  rating      Int? // 1-5
  category    String?
  status      String? // "to try" or "tried"
  description String?
  author      User?        @relation(fields: [authorId], references: [id])
  authorId    Int?
  lists       ListRecipe[]
}

model ListRecipe {
  listId   Int
  recipeId Int
  list     List   @relation(fields: [listId], references: [id])
  recipe   Recipe @relation(fields: [recipeId], references: [id])

  @@id([listId, recipeId])
}
